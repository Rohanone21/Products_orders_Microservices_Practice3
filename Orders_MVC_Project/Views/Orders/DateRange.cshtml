@{
    ViewData["Title"] = "Orders by Date Range";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h2 class="card-title mb-0">
                        <i class="bi bi-calendar-range"></i> Orders by Date Range
                    </h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group mb-3">
                            <label for="startDate" class="form-label">Start Date</label>
                            <input type="date" id="startDate" name="startDate"
                                   class="form-control" value="@ViewBag.DefaultStartDate" required />
                        </div>

                        <div class="form-group mb-3">
                            <label for="endDate" class="form-label">End Date</label>
                            <input type="date" id="endDate" name="endDate"
                                   class="form-control" value="@ViewBag.DefaultEndDate" required />
                        </div>

                        @if (ViewData.ModelState.ContainsKey("") && ViewData.ModelState[""].Errors.Count > 0)
                        {
                            <div class="alert alert-danger">
                                @ViewData.ModelState[""].Errors.First().ErrorMessage
                            </div>
                        }

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i> Search Orders
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Orders
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>