@model Orders_MVC_Project.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="card-title mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Delete Order
                    </h2>
                </div>
                <div class="card-body">
                    <h4 class="text-danger">Are you sure you want to delete this order?</h4>

                    <div class="alert alert-warning">
                        <h5>Order Details</h5>
                        <dl class="row">
                            <dt class="col-sm-4">Order ID:</dt>
                            <dd class="col-sm-8">@Model.Id</dd>

                            <dt class="col-sm-4">Product ID:</dt>
                            <dd class="col-sm-8">@Model.ProductId</dd>

                            <dt class="col-sm-4">Quantity:</dt>
                            <dd class="col-sm-8">@Model.Quantity</dd>

                            <dt class="col-sm-4">Total Price:</dt>
                            <dd class="col-sm-8">$@Model.TotalPrice.ToString("F2")</dd>

                            <dt class="col-sm-4">Order Date:</dt>
                            <dd class="col-sm-8">@Model.OrderDate.ToString("MM/dd/yyyy HH:mm")</dd>
                        </dl>
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Confirm Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>