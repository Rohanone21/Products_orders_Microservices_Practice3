@{
    ViewData["Title"] = "Orders by Product";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h2 class="card-title mb-0">
                        <i class="bi bi-box"></i> Orders by Product
                    </h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group mb-3">
                            <label for="productId" class="form-label">Product ID</label>
                            <input type="number" id="productId" name="productId"
                                   class="form-control" required />
                            <small class="form-text text-muted">Enter the Product ID to view all orders</small>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-info">
                                <i class="bi bi-search"></i> Search Orders
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Orders
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>