@model List<Products_MVC_Project.Models.Product>

@{
    ViewData["Title"] = "All Products";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Products</h1>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Quick Actions</h5>
                <div class="btn-group">
                    <a asp-action="Search" class="btn btn-outline-secondary">Search Products</a>
                    <a asp-action="PriceRange" class="btn btn-outline-secondary">Price Range</a>
                    <a asp-action="Stats" class="btn btn-outline-info">View Stats</a>
                    <a asp-action="TopExpensive" class="btn btn-outline-warning">Top Expensive</a>
                  
                </div>
            </div>
        </div>
    </div>
</div>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Name</td>
                        <td>$@product.Price.ToString("F2")</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-info">Details</a>
                                <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>No products found</h4>
        <p>There are no products in the database. <a asp-action="Create">Create the first product</a>.</p>
    </div>
}