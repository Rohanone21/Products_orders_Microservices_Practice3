@{
    ViewData["Title"] = "Products by Price Range";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h2 class="card-title mb-0">Find Products by Price Range</h2>
            </div>
            <div class="card-body">
                <p class="card-text">Enter minimum and maximum price to find products within that price range.</p>

                <form method="post" class="mt-4">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="minPrice" class="form-label">Minimum Price ($)</label>
                                <input type="number" id="minPrice" name="minPrice"
                                       class="form-control" step="0.01" min="0"
                                       placeholder="0.00" required />
                                <div class="form-text">Lowest price to include</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="maxPrice" class="form-label">Maximum Price ($)</label>
                                <input type="number" id="maxPrice" name="maxPrice"
                                       class="form-control" step="0.01" min="0"
                                       placeholder="100.00" required />
                                <div class="form-text">Highest price to include</div>
                            </div>
                        </div>
                    </div>

                    @if (ViewData.ModelState.ContainsKey("") && ViewData.ModelState[""].Errors.Count > 0)
                    {
                        <div class="alert alert-danger">
                            @ViewData.ModelState[""].Errors.First().ErrorMessage
                        </div>
                    }

                    <div class="d-grid gap-2 d-md-flex justify-content-md-start mt-3">
                        <button type="submit" class="btn btn-success btn-lg me-md-2">
                            <i class="bi bi-filter"></i> Find Products
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">Back to All Products</a>
                    </div>
                </form>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header bg-info text-white">
                <h5 class="card-title mb-0">Price Range Examples</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Budget Range:</h6>
                        <ul>
                            <li>Min: $0.00 - Max: $50.00</li>
                            <li>Min: $10.00 - Max: $30.00</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6>Premium Range:</h6>
                        <ul>
                            <li>Min: $100.00 - Max: $500.00</li>
                            <li>Min: $50.00 - Max: $200.00</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>