@model List<Orders_MVC_Project.Models.Order>

@{
    ViewData["Title"] = "Recent Orders";
    var count = ViewBag.Count;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-clock-history"></i> @count Most Recent Orders
        </h1>
        <a asp-action="Recent" class="btn btn-outline-warning">
            <i class="bi bi-arrow-repeat"></i> New Recent Search
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="alert alert-warning">
            <h5 class="alert-heading">
                <i class="bi bi-info-circle"></i> Recent Orders
            </h5>
            Showing the <strong>@count</strong> most recent orders sorted by order date.
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-warning">
                    <tr>
                        <th>#</th>
                        <th>Order ID</th>
                        <th>Product ID</th>
                        <th>Quantity</th>
                        <th>Total Price</th>
                        <th>Order Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var order = Model[i];
                        var rank = i + 1;
                        var badgeClass = rank == 1 ? "bg-danger" : rank == 2 ? "bg-warning" : rank == 3 ? "bg-info" : "bg-secondary";

                        <tr>
                            <td>
                                <span class="badge @badgeClass">#@rank</span>
                            </td>
                            <td>
                                <span class="badge bg-dark">#@order.Id</span>
                            </td>
                            <td>
                                <span class="badge bg-primary">Product @order.ProductId</span>
                            </td>
                            <td>@order.Quantity</td>
                            <td>
                                <strong class="text-success">$@order.TotalPrice.ToString("F2")</strong>
                            </td>
                            <td>
                                <small>@order.OrderDate.ToString("MM/dd/yyyy HH:mm")</small>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-outline-warning">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Summary Statistics -->
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Recent Orders Summary</h5>
                        <dl class="row">
                            <dt class="col-sm-6">Total Revenue:</dt>
                            <dd class="col-sm-6">$@Model.Sum(o => o.TotalPrice).ToString("F2")</dd>

                            <dt class="col-sm-6">Average Order:</dt>
                            <dd class="col-sm-6">$@Model.Average(o => o.TotalPrice).ToString("F2")</dd>

                            <dt class="col-sm-6">Total Quantity:</dt>
                            <dd class="col-sm-6">@Model.Sum(o => o.Quantity)</dd>

                            <dt class="col-sm-6">Latest Order:</dt>
                            <dd class="col-sm-6">@Model.Max(o => o.OrderDate).ToString("MM/dd/yyyy HH:mm")</dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Order Timeline</h5>
                        <div class="timeline">
                            @foreach (var order in Model.Take(5))
                            {
                                <div class="timeline-item mb-3">
                                    <div class="d-flex justify-content-between">
                                        <span>
                                            <strong>Order #@order.Id</strong> - Product @order.ProductId
                                        </span>
                                        <span class="text-muted">
                                            @order.OrderDate.ToString("MM/dd/yyyy HH:mm")
                                        </span>
                                    </div>
                                    <div class="text-success">
                                        $@order.TotalPrice.ToString("F2") • Qty: @order.Quantity
                                    </div>
                                </div>
                            }
                            @if (Model.Count > 5)
                            {
                                <div class="text-center text-muted">
                                    ... and @(Model.Count - 5) more orders
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center py-5">
            <div class="mb-3">
                <i class="bi bi-clock-history display-1 text-info"></i>
            </div>
            <h3 class="text-info">No Recent Orders</h3>
            <p class="text-muted mb-4">
                There are no orders in the system to display.
            </p>
            <a asp-action="Create" class="btn btn-primary me-2">
                <i class="bi bi-plus-circle"></i> Create First Order
            </a>
            <a asp-action="Index" class="btn btn-outline-primary">
                <i class="bi bi-list-ul"></i> View All Orders
            </a>
        </div>
    }

    <div class="mt-4">
        <a asp-action="Recent" class="btn btn-warning me-2">
            <i class="bi bi-arrow-repeat"></i> New Recent Search
        </a>
        <a asp-action="Index" class="btn btn-primary">
            <i class="bi bi-list-ul"></i> Back to All Orders
        </a>
    </div>
</div>