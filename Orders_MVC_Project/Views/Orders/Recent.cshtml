@{
    ViewData["Title"] = "Recent Orders";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h2 class="card-title mb-0">
                        <i class="bi bi-clock-history"></i> Recent Orders
                    </h2>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group mb-3">
                            <label for="count" class="form-label">Number of Recent Orders</label>
                            <input type="number" id="count" name="count"
                                   class="form-control" value="10" min="1" max="100" required />
                            <small class="form-text text-muted">Enter how many recent orders to display (1-100)</small>
                        </div>

                        @if (ViewData.ModelState.ContainsKey("") && ViewData.ModelState[""].Errors.Count > 0)
                        {
                            <div class="alert alert-danger">
                                @ViewData.ModelState[""].Errors.First().ErrorMessage
                            </div>
                        }

                        <div class="form-group">
                            <button type="submit" class="btn btn-warning">
                                <i class="bi bi-search"></i> Show Recent Orders
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Orders
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>