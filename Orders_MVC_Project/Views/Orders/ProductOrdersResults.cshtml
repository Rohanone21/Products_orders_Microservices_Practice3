@model List<Orders_MVC_Project.Models.Order>

@{
    ViewData["Title"] = "Product Orders";
    var productId = ViewBag.ProductId;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-box"></i> Orders for Product #@productId
        </h1>
        <a asp-action="ProductOrders" class="btn btn-outline-info">
            <i class="bi bi-arrow-repeat"></i> Search Another Product
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="alert alert-info">
            <h5 class="alert-heading">
                <i class="bi bi-info-circle"></i> Product Order History
            </h5>
            Found <strong>@Model.Count</strong> order(s) for Product <strong>#@productId</strong>.
            <br>
            <strong>Total Revenue:</strong> $@Model.Sum(o => o.TotalPrice).ToString("F2") •
            <strong>Total Units Sold:</strong> @Model.Sum(o => o.Quantity)
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-info">
                    <tr>
                        <th>Order ID</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Total Price</th>
                        <th>Order Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        var unitPrice = order.TotalPrice / order.Quantity;

                        <tr>
                            <td>
                                <span class="badge bg-dark">#@order.Id</span>
                            </td>
                            <td>@order.Quantity</td>
                            <td>
                                <small class="text-muted">$@unitPrice.ToString("F2")</small>
                            </td>
                            <td>
                                <strong class="text-success">$@order.TotalPrice.ToString("F2")</strong>
                            </td>
                            <td>@order.OrderDate.ToString("MM/dd/yyyy HH:mm")</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-outline-warning">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Product Performance Summary -->
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="card-title mb-0">Product Performance Summary</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-6">Total Orders:</dt>
                            <dd class="col-sm-6">@Model.Count</dd>

                            <dt class="col-sm-6">Total Revenue:</dt>
                            <dd class="col-sm-6">$@Model.Sum(o => o.TotalPrice).ToString("F2")</dd>

                            <dt class="col-sm-6">Total Units Sold:</dt>
                            <dd class="col-sm-6">@Model.Sum(o => o.Quantity)</dd>

                            <dt class="col-sm-6">Average Order Value:</dt>
                            <dd class="col-sm-6">$@Model.Average(o => o.TotalPrice).ToString("F2")</dd>

                            <dt class="col-sm-6">First Order:</dt>
                            <dd class="col-sm-6">@Model.Min(o => o.OrderDate).ToString("MM/dd/yyyy")</dd>

                            <dt class="col-sm-6">Latest Order:</dt>
                            <dd class="col-sm-6">@Model.Max(o => o.OrderDate).ToString("MM/dd/yyyy")</dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="card-title mb-0">Sales Distribution</h5>
                    </div>
                    <div class="card-body">
                        <div class="text-center">
                            <h3 class="text-success">$@Model.Sum(o => o.TotalPrice).ToString("F2")</h3>
                            <p class="text-muted">Total Revenue from Product #@productId</p>

                            <div class="progress mb-3" style="height: 25px;">
                                @{
                                    var maxOrder = Model.Max(o => o.TotalPrice);
                                    var minOrder = Model.Min(o => o.TotalPrice);
                                    var avgOrder = Model.Average(o => o.TotalPrice);
                                }
                                <div class="progress-bar bg-success" style="width: @((avgOrder / maxOrder) * 100)%">
                                    Average: $@avgOrder.ToString("F2")
                                </div>
                            </div>

                            <div class="row text-center">
                                <div class="col-md-4">
                                    <small class="text-muted">Min Order</small>
                                    <br>
                                    <strong>$@minOrder.ToString("F2")</strong>
                                </div>
                                <div class="col-md-4">
                                    <small class="text-muted">Avg Order</small>
                                    <br>
                                    <strong>$@avgOrder.ToString("F2")</strong>
                                </div>
                                <div class="col-md-4">
                                    <small class="text-muted">Max Order</small>
                                    <br>
                                    <strong>$@maxOrder.ToString("F2")</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center py-5">
            <div class="mb-3">
                <i class="bi bi-box display-1 text-warning"></i>
            </div>
            <h3 class="text-warning">No Orders Found</h3>
            <p class="text-muted mb-4">
                No orders were found for Product <strong>#@productId</strong>.
            </p>
            <div class="d-flex justify-content-center gap-2">
                <a asp-action="ProductOrders" class="btn btn-warning">
                    <i class="bi bi-search"></i> Search Another Product
                </a>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create Order
                </a>
                <a asp-action="Index" class="btn btn-outline-primary">
                    <i class="bi bi-list-ul"></i> View All Orders
                </a>
            </div>
        </div>
    }

    <div class="mt-4">
        <a asp-action="ProductOrders" class="btn btn-info me-2">
            <i class="bi bi-arrow-repeat"></i> Search Another Product
        </a>
        <a asp-action="ProductPerformance" class="btn btn-success me-2">
            <i class="bi bi-graph-up"></i> View Product Performance
        </a>
        <a asp-action="Index" class="btn btn-primary">
            <i class="bi bi-list-ul"></i> Back to All Orders
        </a>
    </div>
</div>