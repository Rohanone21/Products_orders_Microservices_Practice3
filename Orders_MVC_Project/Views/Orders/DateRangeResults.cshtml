@model List<Orders_MVC_Project.Models.Order>

@{
    ViewData["Title"] = "Date Range Results";
    var startDate = ViewBag.StartDate;
    var endDate = ViewBag.EndDate;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-calendar-range"></i> Orders from @startDate.ToString("MM/dd/yyyy") to @endDate.ToString("MM/dd/yyyy")
        </h1>
        <a asp-action="DateRange" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-repeat"></i> New Date Search
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="alert alert-info">
            <h5 class="alert-heading">
                <i class="bi bi-info-circle"></i> Search Results
            </h5>
            Found <strong>@Model.Count</strong> order(s) in the selected date range.
            <br>
            <strong>Total Revenue:</strong> $@Model.Sum(o => o.TotalPrice).ToString("F2")
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-secondary">
                    <tr>
                        <th>Order ID</th>
                        <th>Product ID</th>
                        <th>Quantity</th>
                        <th>Total Price</th>
                        <th>Order Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>
                                <span class="badge bg-dark">#@order.Id</span>
                            </td>
                            <td>
                                <span class="badge bg-primary">Product @order.ProductId</span>
                            </td>
                            <td>@order.Quantity</td>
                            <td>
                                <strong class="text-success">$@order.TotalPrice.ToString("F2")</strong>
                            </td>
                            <td>@order.OrderDate.ToString("MM/dd/yyyy HH:mm")</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-outline-warning">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-outline-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Summary Cards -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card text-center border-info">
                    <div class="card-body">
                        <h5 class="card-title text-info">Total Orders</h5>
                        <h3 class="text-info">@Model.Count</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center border-success">
                    <div class="card-body">
                        <h5 class="card-title text-success">Total Revenue</h5>
                        <h3 class="text-success">$@Model.Sum(o => o.TotalPrice).ToString("F2")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center border-warning">
                    <div class="card-body">
                        <h5 class="card-title text-warning">Average Order</h5>
                        <h3 class="text-warning">$@Model.Average(o => o.TotalPrice).ToString("F2")</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-center border-primary">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Total Quantity</h5>
                        <h3 class="text-primary">@Model.Sum(o => o.Quantity)</h3>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center py-5">
            <div class="mb-3">
                <i class="bi bi-calendar-x display-1 text-warning"></i>
            </div>
            <h3 class="text-warning">No Orders Found</h3>
            <p class="text-muted mb-4">
                No orders were found in the selected date range from
                <strong>@startDate.ToString("MM/dd/yyyy")</strong> to
                <strong>@endDate.ToString("MM/dd/yyyy")</strong>.
            </p>
            <a asp-action="DateRange" class="btn btn-warning">
                <i class="bi bi-search"></i> Try Different Dates
            </a>
        </div>
    }

    <div class="mt-4">
        <a asp-action="DateRange" class="btn btn-secondary me-2">
            <i class="bi bi-arrow-repeat"></i> New Date Search
        </a>
        <a asp-action="Index" class="btn btn-primary">
            <i class="bi bi-list-ul"></i> Back to All Orders
        </a>
    </div>
</div>