@{
    ViewData["Title"] = "Top Expensive Products";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header bg-warning text-dark">
                <h2 class="card-title mb-0">Top Expensive Products</h2>
            </div>
            <div class="card-body">
                <p class="card-text">Enter how many of the most expensive products you want to see, sorted from highest to lowest price.</p>

                <form method="post" class="mt-4">
                    <div class="form-group mb-4">
                        <label for="count" class="form-label fs-5">Number of Products to Show</label>
                        <input type="number" id="count" name="count"
                               class="form-control form-control-lg"
                               min="1" max="100" value="5" required
                               title="Enter how many top expensive products to display" />
                        <div class="form-text">Enter a number between 1 and 100</div>
                    </div>

                    @if (ViewData.ModelState.ContainsKey("") && ViewData.ModelState[""].Errors.Count > 0)
                    {
                        <div class="alert alert-danger">
                            @ViewData.ModelState[""].Errors.First().ErrorMessage
                        </div>
                    }

                    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                        <button type="submit" class="btn btn-warning btn-lg me-md-2 text-dark">
                            <i class="bi bi-trophy"></i> Show Top Products
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">Back to All Products</a>
                    </div>
                </form>
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header bg-info text-white">
                <h5 class="card-title mb-0">Popular Selections</h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-md-3">
                        <a href="javascript:void(0)" onclick="setCount(3)" class="btn btn-outline-primary btn-sm mb-2">Top 3</a>
                    </div>
                    <div class="col-md-3">
                        <a href="javascript:void(0)" onclick="setCount(5)" class="btn btn-outline-primary btn-sm mb-2">Top 5</a>
                    </div>
                    <div class="col-md-3">
                        <a href="javascript:void(0)" onclick="setCount(10)" class="btn btn-outline-primary btn-sm mb-2">Top 10</a>
                    </div>
                    <div class="col-md-3">
                        <a href="javascript:void(0)" onclick="setCount(20)" class="btn btn-outline-primary btn-sm mb-2">Top 20</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function setCount(count) {
            document.getElementById('count').value = count;
        }
    </script>
}