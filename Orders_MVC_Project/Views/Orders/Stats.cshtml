@model System.Text.Json.JsonElement

@{
    ViewData["Title"] = "Order Statistics";
}

<div class="container mt-4">
    <h1 class="mb-4">
        <i class="bi bi-graph-up"></i> Order Statistics
    </h1>

    <div class="row">
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-4">
                <div class="card-body">
                    <h5 class="card-title">Total Orders</h5>
                    <h2 class="card-text">@Model.GetProperty("totalOrders").GetInt32()</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-success mb-4">
                <div class="card-body">
                    <h5 class="card-title">Total Revenue</h5>
                    <h2 class="card-text">$@Model.GetProperty("totalRevenue").GetDouble().ToString("F2")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-info mb-4">
                <div class="card-body">
                    <h5 class="card-title">Average Order Value</h5>
                    <h2 class="card-text">$@Model.GetProperty("averageOrderValue").GetDouble().ToString("F2")</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card text-white bg-warning mb-4">
                <div class="card-body">
                    <h5 class="card-title">Maximum Order Value</h5>
                    <h2 class="card-text">$@Model.GetProperty("maxOrderValue").GetDouble().ToString("F2")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card text-white bg-secondary mb-4">
                <div class="card-body">
                    <h5 class="card-title">Minimum Order Value</h5>
                    <h2 class="card-text">$@Model.GetProperty("minOrderValue").GetDouble().ToString("F2")</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-primary">
            <i class="bi bi-arrow-left"></i> Back to Orders
        </a>
    </div>
</div>