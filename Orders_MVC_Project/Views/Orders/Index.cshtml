@model List<Orders_MVC_Project.Models.Order>

@{
    ViewData["Title"] = "All Orders";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>
            <i class="bi bi-cart-check"></i> Orders Management
        </h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New Order
        </a>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Quick Actions</h5>
                    <div class="btn-group">
                        <a asp-action="Stats" class="btn btn-outline-info">Order Statistics</a>
                        <a asp-action="DateRange" class="btn btn-outline-secondary">Date Range</a>
                        <a asp-action="Recent" class="btn btn-outline-warning">Recent Orders</a>
                        <a asp-action="ProductPerformance" class="btn btn-outline-success">Product Performance</a>
                        <a asp-action="Search" class="btn btn-outline-primary">Search Products</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Order ID</th>
                        <th>Product ID</th>
                        <th>Quantity</th>
                        <th>Total Price</th>
                        <th>Order Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.Id</td>
                            <td>@order.ProductId</td>
                            <td>@order.Quantity</td>
                            <td>$@order.TotalPrice.ToString("F2")</td>
                            <td>@order.OrderDate.ToString("MM/dd/yyyy HH:mm")</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-warning">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="card mt-4">
            <div class="card-body">
                <h5 class="card-title">Order Summary</h5>
                <div class="row">
                    <div class="col-md-3">
                        <strong>Total Orders:</strong> @Model.Count
                    </div>
                    <div class="col-md-3">
                        <strong>Total Revenue:</strong> $@Model.Sum(o => o.TotalPrice).ToString("F2")
                    </div>
                    <div class="col-md-3">
                        <strong>Average Order:</strong> $@Model.Average(o => o.TotalPrice).ToString("F2")
                    </div>
                    <div class="col-md-3">
                        <strong>Total Quantity:</strong> @Model.Sum(o => o.Quantity)
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center py-5">
            <div class="mb-3">
                <i class="bi bi-cart-x display-1 text-info"></i>
            </div>
            <h3 class="text-info">No Orders Found</h3>
            <p class="text-muted mb-4">There are no orders in the system yet. Create your first order to get started.</p>
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle"></i> Create First Order
            </a>
        </div>
    }
</div>