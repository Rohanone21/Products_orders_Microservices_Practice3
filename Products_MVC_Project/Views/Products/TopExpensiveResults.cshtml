@model List<Products_MVC_Project.Models.Product>

@{
    ViewData["Title"] = "Top Expensive Products";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Top @ViewBag.Count Most Expensive Products</h1>
        <a asp-action="TopExpensive" class="btn btn-outline-warning">New Top Products Search</a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-warning">
                    <tr>
                        <th>Rank</th>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        var product = Model[i];
                        var rank = i + 1;
                        var badgeClass = rank == 1 ? "bg-danger" : rank == 2 ? "bg-warning" : rank == 3 ? "bg-info" : "bg-secondary";

                        <tr>
                            <td>
                                <span class="badge @badgeClass fs-6">#@rank</span>
                            </td>
                            <td>@product.Id</td>
                            <td>@product.Name</td>
                            <td>
                                <strong class="text-success">₹@product.Price.ToString("F2")</strong>
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-info">Details</a>
                                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Price Statistics</h5>
                        <dl class="row">
                            <dt class="col-sm-6">Most Expensive:</dt>
                            <dd class="col-sm-6">₹@Model.Max(p => p.Price).ToString("F2")</dd>

                            <dt class="col-sm-6">Least Expensive:</dt>
                            <dd class="col-sm-6">₹@Model.Min(p => p.Price).ToString("F2")</dd>

                            <dt class="col-sm-6">Average Price:</dt>
                            <dd class="col-sm-6">₹@Model.Average(p => p.Price).ToString("F2")</dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Total Value</h5>
                        <h3 class="text-success">₹@Model.Sum(p => p.Price).ToString("F2")</h3>
                        <p class="text-muted">Combined value of top @ViewBag.Count products</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <h4>No products found</h4>
            <p>There are no products in the database to display.</p>
        </div>
    }

    <div class="mt-4">
        <a asp-action="TopExpensive" class="btn btn-warning me-2">New Top Products Search</a>
        <a asp-action="Index" class="btn btn-primary">Back to All Products</a>
    </div>
</div>