@model IEnumerable<Orders_New_MVC_Microservice.Models.Order>

<div class="container mt-4">
    <h2>Orders By Date Range</h2>

    <table class="table table-bordered mt-3">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Customer</th>
                <th>Product</th>
                <th>Qty</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model)
            {
                <tr>
                    <td>@o.OrderId</td>
                    <td>@o.CustomerName</td>
                    <td>@o.ProductId</td>
                    <td>@o.Quantity</td>
                    <td>@o.OrderDate</td>
                </tr>
            }
        </tbody>
    </table>
</div>
