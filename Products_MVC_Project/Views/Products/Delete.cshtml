@model Products_MVC_Project.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-danger">Delete Product</h1>
</div>

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">Warning!</h4>
    <p>You are about to delete this product. This action cannot be undone.</p>
    <hr>
    <p class="mb-0">Please confirm that you want to delete the following product:</p>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0">Product to Delete</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Product ID:</dt>
                    <dd class="col-sm-8">@Model.Id</dd>

                    <dt class="col-sm-4">Name:</dt>
                    <dd class="col-sm-8">@Model.Name</dd>

                    <dt class="col-sm-4">Price:</dt>
                    <dd class="col-sm-8">$@Model.Price.ToString("F2")</dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete" method="post" class="mt-4">
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary btn-lg">Cancel</a>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-warning">
                <h5 class="card-title mb-0">Considerations</h5>
            </div>
            <div class="card-body">
                <ul>
                    <li>This action is permanent</li>
                    <li>Product data will be completely removed</li>
                    <li>This cannot be undone</li>
                    <li>Make sure this is the correct product</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-primary">
        <i class="bi bi-arrow-left"></i> Back to Product List
    </a>
</div>